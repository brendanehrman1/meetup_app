<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:top="0dp"
        android:left="0dp"
        android:right="0dp">
        <rotate android:fromDegrees="-100">
            <shape android:shape="rectangle">
                <size
                    android:width="0dp"
                    android:height="0dp"/>
                <solid android:color="#F7567C"/>

            </shape>

        </rotate>
    </item>

    <item
        android:drawable="@drawable/time_ic"
        android:bottom="60dp"
        android:left="20dp"
        android:right="20dp"
        android:top="30dp"/>

</layer-list>